<header
  data-controller="mobile-menu"
  class="fixed inset-x-0 top-0 z-50 border-b border-white/10 bg-black/70 backdrop-blur supports-[backdrop-filter]:bg-black/60"
>
  <div class="container-x relative">
    <div class="flex h-16 sm:h-[76px] items-center justify-between gap-3 sm:gap-4">
      <a href="<%= root_path %>" class="flex items-center gap-3 sm:gap-4 shrink-0 min-w-0">
      <span class="relative shrink-0">
        <span class="pointer-events-none absolute -inset-3 rounded-[28px] bg-[rgb(var(--bio-blue))]/12 blur-2xl"></span>
        <%= image_tag "Biotech logo.png",
              class: "h-24 w-24 sm:h-[112px] sm:w-[112px] lg:h-[128px] lg:w-[128px] object-contain",
              alt: "Biotech" %>
      </span>


        <span class="leading-tight min-w-0">
          <span class="block text-[13px] sm:text-sm font-extrabold tracking-wide">
            <span class="text-white">BIO</span><span class="text-[rgb(var(--bio-blue))]">TECH</span>
          </span>
          <span class="hidden sm:block text-[11px] text-white/55 truncate">
            Software sob medida
          </span>
        </span>
      </a>

      <nav class="hidden md:flex items-center gap-6 lg:gap-7 text-sm font-semibold text-white/80">
        <%= link_to "Home", root_path, class: "hover:text-white transition" %>
        <%= link_to "Sobre", sobre_path, class: "hover:text-white transition" %>
        <%= link_to "Serviços", servicos_path, class: "hover:text-white transition" %>
        <%= link_to "Contato", contato_path, class: "hover:text-white transition" %>
      </nav>

      <div class="flex items-center gap-2 sm:gap-3 shrink-0">
        <%= link_to "Falar com a Biotech", contato_path, class: "btn-outline hidden sm:inline-flex" %>
        <%= link_to "Orçamento", contato_path, class: "btn-primary hidden md:inline-flex" %>

        <button
          type="button"
          data-action="mobile-menu#toggle"
          data-role="menu-button"
          aria-label="Abrir menu"
          aria-expanded="false"
          class="md:hidden inline-flex items-center justify-center rounded-full h-10 w-10 ring-1 ring-white/15 hover:ring-white/25 transition focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-[rgb(var(--bio-blue))/0.25]"
        >
          <svg data-mobile-menu-target="iconOpen" class="h-5 w-5" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M4 7h16M4 12h16M4 17h16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
          <svg data-mobile-menu-target="iconClose" class="h-5 w-5 hidden" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M6 6l12 12M18 6l-12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </button>
      </div>
    </div>

    <div
      data-mobile-menu-target="panel"
      class="hidden md:hidden fixed inset-x-0 top-16 sm:top-[76px] bottom-0 z-40"
      data-action="click->mobile-menu#closeOnBackdrop"
    >
      <div class="absolute inset-0 bg-black/60 backdrop-blur-sm"></div>

      <div class="relative container-x pt-4 pb-6" data-action="click->mobile-menu#stopPropagation">
        <div class="mx-auto w-full max-w-sm rounded-3xl bg-black/90 ring-1 ring-white/10 p-3 shadow-2xl">
          <div class="flex items-center gap-3 px-2 pt-1 pb-3">
            <%= image_tag "Biotech logo.png",
                  class: "h-14 w-14 object-contain drop-shadow-[0_22px_70px_rgba(45,211,227,0.26)]",
                  alt: "Biotech" %>
            <div class="leading-tight">
              <div class="text-sm font-extrabold tracking-wide">
                <span class="text-white">BIO</span><span class="text-[rgb(var(--bio-blue))]">TECH</span>
              </div>
              <div class="text-[11px] text-white/55">Software sob medida</div>
            </div>
          </div>

          <div class="grid gap-1 text-sm font-semibold text-white/90 text-center">
            <%= link_to "Home", root_path,
                  class: "rounded-2xl px-4 py-3 hover:bg-white/5 transition",
                  data: { action: "mobile-menu#close" } %>
            <%= link_to "Sobre", sobre_path,
                  class: "rounded-2xl px-4 py-3 hover:bg-white/5 transition",
                  data: { action: "mobile-menu#close" } %>
            <%= link_to "Serviços", servicos_path,
                  class: "rounded-2xl px-4 py-3 hover:bg-white/5 transition",
                  data: { action: "mobile-menu#close" } %>
            <%= link_to "Contato", contato_path,
                  class: "rounded-2xl px-4 py-3 hover:bg-white/5 transition",
                  data: { action: "mobile-menu#close" } %>
          </div>

          <div class="divider my-3"></div>

          <div class="grid gap-2">
            <%= link_to "Orçamento", contato_path, class: "btn-primary w-full", data: { action: "mobile-menu#close" } %>
            <%= link_to "Falar com a Biotech", contato_path, class: "btn-outline w-full", data: { action: "mobile-menu#close" } %>
          </div>

          <p class="mt-3 px-2 text-[11px] text-white/45 text-center">
            Resposta rápida no WhatsApp e retorno por email em horário comercial.
          </p>
        </div>
      </div>
    </div>
  </div>
</header>
