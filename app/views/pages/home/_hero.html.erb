<section
  id="inicio"
  class="relative isolate w-screen left-1/2 -translate-x-1/2 overflow-hidden -mt-20
        min-h-[86vh] sm:min-h-[88vh] lg:min-h-[92vh]"

>

  <div class="pointer-events-none absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-black"></div>

    <div
      class="absolute inset-0 opacity-[0.06]"
      style="background-image:
        linear-gradient(to right, rgba(255,255,255,0.20) 1px, transparent 1px),
        linear-gradient(to bottom, rgba(255,255,255,0.20) 1px, transparent 1px);
        background-size: 64px 64px;"
    ></div>

    <div class="absolute -top-56 left-[20%] h-[520px] w-[520px] -translate-x-1/2 rounded-full bg-[rgb(var(--bio-blue))]/10 blur-3xl"></div>
    <div class="absolute -bottom-72 left-[58%] h-[620px] w-[620px] -translate-x-1/2 rounded-full bg-[rgb(var(--bio-green))]/8 blur-3xl"></div>

    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,rgba(255,255,255,0.06),rgba(0,0,0,0)_55%)]"></div>

    <div class="bio-fx">
      <div class="bio-fx-mask">
        <svg class="circuit-static" viewBox="0 0 1200 600" preserveAspectRatio="none" aria-hidden="true">
          <path class="circuit-path"
            d="M60 180 H 300
               C 350 180, 380 150, 380 100
               V 60
               M300 180 H 560
               C 620 180, 660 220, 660 280
               V 360
               M660 360 H 940
               C 1000 360, 1040 320, 1040 260
               V 170
               M940 360 H 1160" />

          <path class="circuit-path"
            style="opacity:.18"
            d="M140 260 H 420
               C 470 260, 500 290, 500 340
               V 420
               M500 420 H 780" />

          <circle class="circuit-node" cx="300" cy="180" r="5"/>
          <circle class="circuit-node" cx="560" cy="180" r="5"/>
          <circle class="circuit-node" cx="660" cy="360" r="5"/>
          <circle class="circuit-node" cx="940" cy="360" r="5"/>
          <circle class="circuit-node" cx="1160" cy="360" r="5"/>
          <circle class="circuit-node" cx="500" cy="420" r="5"/>
          <circle class="circuit-node" cx="780" cy="420" r="5"/>

          <path class="fiber-path"
            d="M60 180 H 300
               C 350 180, 380 150, 380 100
               V 60
               M300 180 H 560
               C 620 180, 660 220, 660 280
               V 360
               M660 360 H 940
               C 1000 360, 1040 320, 1040 260
               V 170
               M940 360 H 1160" />

          <path class="fiber-path alt"
            d="M140 260 H 420
               C 470 260, 500 290, 500 340
               V 420
               M500 420 H 780" />
        </svg>

        <div class="leaf-p a" style="top: 58%; left: 18%; animation-delay: .4s;">
          <svg viewBox="0 0 24 24" class="h-full w-full" aria-hidden="true">
            <path d="M20 4c-7 1-12 6-13 13 7-1 12-6 13-13Z" fill="rgba(119,215,108,0.78)"/>
          </svg>
        </div>

        <div class="leaf-p b" style="top: 66%; left: 30%; animation-delay: 2.2s;">
          <svg viewBox="0 0 24 24" class="h-full w-full" aria-hidden="true">
            <path d="M20 4c-7 1-12 6-13 13 7-1 12-6 13-13Z" fill="rgba(119,215,108,0.65)"/>
          </svg>
        </div>

        <div class="leaf-p a" style="top: 62%; left: 46%; animation-delay: 4.1s;">
          <svg viewBox="0 0 24 24" class="h-full w-full" aria-hidden="true">
            <path d="M20 4c-7 1-12 6-13 13-13Z" fill="rgba(119,215,108,0.70)"/>
          </svg>
        </div>

        <div class="star-p" style="top: 34%; left: 70%;"></div>
        <div class="star-p big" style="top: 48%; left: 78%; animation-delay: .8s;"></div>
        <div class="star-p" style="top: 58%; left: 86%; animation-delay: 1.6s;"></div>
      </div>
    </div>
  </div>

  <div class="container-x min-h-[86vh] sm:min-h-[88vh] lg:min-h-[92vh]
              pt-[8.25rem] sm:pt-[9.25rem] lg:pt-[10rem]
              pb-24 sm:pb-32 lg:pb-36
              flex items-center">
    <div class="grid gap-10 sm:gap-12 lg:gap-16 lg:grid-cols-2 lg:items-center lg:py-8">
      <div class="relative z-20">
        <div class="text-center lg:text-left max-w-2xl lg:max-w-xl mx-auto lg:mx-0 space-y-6 sm:space-y-7">
          <div class="flex flex-wrap justify-center lg:justify-start gap-2">
            <span class="badge">Software sob medida</span>
            <span class="badge">Apps • Sistemas • Plataformas</span>
          </div>

          <h1 class="text-[28px] sm:text-4xl lg:text-[48px] font-extrabold leading-[1.14] sm:leading-[1.08] tracking-tight">
            Construímos produtos digitais com qualidade e escala.
          </h1>

          <p class="text-white/70 text-[15px] sm:text-lg leading-relaxed">
            Da estratégia ao lançamento: design, desenvolvimento e evolução contínua para o seu software crescer com segurança.
          </p>
          <div class="flex flex-col sm:flex-row gap-3 sm:justify-center lg:justify-start pt-1">
            <%= link_to "Solicitar orçamento", "/contato", class: "btn-primary w-full sm:w-auto" %>
            <%= link_to "Ver serviços", "/servicos", class: "btn-outline w-full sm:w-auto" %>
          </div>
          <div class="flex flex-wrap items-center justify-center lg:justify-start gap-x-4 gap-y-2 text-sm text-white/60 pt-1">
            <span class="whitespace-nowrap">Produto</span>
            <span class="text-white/25">•</span>
            <span class="whitespace-nowrap">Design</span>
            <span class="text-white/25">•</span>
            <span class="whitespace-nowrap">Engenharia</span>
            <span class="text-white/25">•</span>
            <span class="whitespace-nowrap">Evolução</span>
          </div>
        </div>
      </div>

      <div class="relative z-30 hidden lg:block">
        <div class="relative lg:-mr-8 xl:-mr-14">
          <%= image_tag "hero-devices.png",
            alt: "Interfaces em dispositivos",
            class: "w-full max-w-none h-auto select-none
                    lg:scale-[1.15] xl:scale-[1.22]
                    drop-shadow-[0_30px_80px_rgba(0,0,0,0.65)]" %>
        </div>
      </div>
    </div>
  </div>

  <div class="pointer-events-none absolute inset-x-0 -bottom-2 h-32 sm:h-36 lg:h-44 -z-10">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-black/90 to-black"></div>
    <div class="absolute left-1/2 top-10 h-28 w-[120%] -translate-x-1/2 rounded-full
                bg-[linear-gradient(90deg,rgba(45,211,227,0.08),rgba(119,215,108,0.06))]
                blur-[90px]"></div>
  </div>

</section>
