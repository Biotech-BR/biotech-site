<table role="presentation" width="100%" cellpadding="0" cellspacing="0" style="font-family: Arial, sans-serif; color:#0b1220;">
  <tr>
    <td style="padding: 24px;">
      <div style="max-width: 680px; margin: 0 auto; background: #ffffff; border-radius: 16px; border: 1px solid #e5e7eb; overflow: hidden;">
        <div style="padding: 18px 22px; background: #0b0f19;">
          <div style="font-size: 12px; letter-spacing: .12em; text-transform: uppercase; color: rgba(255,255,255,.75);">
            Novo contato pelo site
          </div>
          <div style="margin-top: 8px; font-size: 18px; color: #ffffff; font-weight: 800;">
            <%= @form.safe_subject %>
          </div>
          <div style="margin-top: 6px; font-size: 13px; color: rgba(255,255,255,.65);">
            Responda este email para falar direto com o cliente (Reply-To configurado).
          </div>
        </div>

        <div style="padding: 22px;">
          <table role="presentation" width="100%" cellpadding="0" cellspacing="0" style="border-collapse: collapse;">
            <tr>
              <td style="padding: 10px 0; width: 140px; color:#6b7280; font-size: 13px;">Nome</td>
              <td style="padding: 10px 0; font-size: 14px;"><strong><%= @form.name %></strong></td>
            </tr>

            <tr>
              <td style="padding: 10px 0; color:#6b7280; font-size: 13px;">Email</td>
              <td style="padding: 10px 0; font-size: 14px;"><%= @form.email %></td>
            </tr>

            <% if @form.phone.present? %>
              <tr>
                <td style="padding: 10px 0; color:#6b7280; font-size: 13px;">Telefone</td>
                <td style="padding: 10px 0; font-size: 14px;"><%= @form.normalized_phone %></td>
              </tr>
            <% end %>

            <% if @form.company.present? %>
              <tr>
                <td style="padding: 10px 0; color:#6b7280; font-size: 13px;">Empresa</td>
                <td style="padding: 10px 0; font-size: 14px;"><%= @form.company %></td>
              </tr>
            <% end %>
          </table>

          <div style="margin-top: 18px; padding-top: 18px; border-top: 1px solid #e5e7eb;">
            <div style="color:#6b7280; font-size: 13px; margin-bottom: 8px;">Mensagem</div>
            <div style="font-size: 14px; line-height: 1.65; white-space: pre-wrap;"><%= @form.message %></div>
          </div>

          <div style="margin-top: 18px; color:#9ca3af; font-size: 12px;">
            Enviado via formulário do site • <%= Time.current.strftime("%d/%m/%Y %H:%M") %>
          </div>
        </div>
      </div>
    </td>
  </tr>
</table>
